{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "PropTypes": "readonly",
        "React": "readonly",
        "ReactDOM": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/extensions": "off",
        "no-cond-assign": [
            "error",
            "except-parens"
        ],
        "no-console": "off",
        "no-continue": "off",
        "no-plusplus": "off",
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "no-shadow": [
            "error",
            {
                "allow": [
                    "_"
              ]
            }
        ],
        "prefer-template": "off",
        "react/jsx-filename-extension": "off",
        "react/jsx-props-no-spreading": [
            "error",
            {
                "explicitSpread": "ignore"
            }
        ],
        "react/prop-types": [
            "error"
        ]
    }
}
